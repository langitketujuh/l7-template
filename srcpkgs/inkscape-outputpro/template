do_install() {
	vmkdir usr/share/inkscape/extensions
	vcopy outputpro usr/share/inkscape/extensions
	for f in inx py; do
		vinstall outputpro.${f} 0644 usr/share/inkscape/extensions outputpro.${f}
	done
}
