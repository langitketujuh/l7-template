do_install() {
	vmkdir etc/skel/.config/falkon/profiles
	vcopy ${FILESDIR}/default etc/skel/.config/falkon/profiles
	vinstall ${FILESDIR}/profiles.ini 0644 etc/skel/.config/falkon/profiles profiles.ini
}
