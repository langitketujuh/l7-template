do_install() {
	vinstall ${FILESDIR}/Breeze_Dark.xml 0644 usr/share/blender/3.0/scripts/presets/interface_theme Breeze_Dark.xml
	vinstall ${FILESDIR}/userpref.blend 0644 etc/skel/.config/blender/3.0/config userpref.blend
}
