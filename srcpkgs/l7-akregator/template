do_install() {
	vinstall ${FILESDIR}/akregatorrc 0644 etc/xdg
	vinstall ${FILESDIR}/autostart/* 0644 etc/xdg/autostart
	vinstall ${FILESDIR}/feeds.opml 0644 etc/skel/.local/share/akregator/data
}
