do_install() {
  vinstall ${FILESDIR}/katerc 0644 etc/skel/.config katerc
  vinstall ${FILESDIR}/kateschemarc 0644 etc/skel/.config kateschemarc
  vinstall ${FILESDIR}/katesyntaxhighlightingrc 0644 etc/skel/.config katesyntaxhighlightingrc
}
