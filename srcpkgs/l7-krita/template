# Template file for 'l7-krita'
pkgname=l7-krita
version=0.1.2
revision=4
build_style=meta
depends="krita gmic-krita"
short_desc="Additional configuration for krita package"
maintainer="Hervy Qurrotul Ainur Rozi <hervyqa@proton.me>"
license="GPL-3.0-or-later"
homepage="https://langitketujuh.id"

do_install() {
	vsed -i ${FILESDIR}/kritarc -e 's/Theme=Krita dark/Theme=Breeze Dark/'
	vinstall ${FILESDIR}/kritarc 0644 etc/skel/.config kritarc
	vinstall ${FILESDIR}/LangitKetujuh.kws 0644 etc/skel/.local/share/krita/workspaces/ LangitKetujuh.kws
}
