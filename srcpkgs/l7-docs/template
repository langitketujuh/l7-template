# Template file for 'l7-docs'
pkgname=l7-docs
version=20211104
revision=1
wrksrc="docs-${version}"
hostmakedepends="mdBook mdbook-linkcheck"
depends="xdg-utils"
short_desc="Documentation for LangitKetujuh OS"
maintainer="Hervy Qurrotul Ainur Rozi <hervyqa@pm.me>"
license="CC-BY-SA-4.0"
homepage="https://gitlab.com/langitketujuh/book/docs"
distfiles="https://al.quds.repo.langitketujuh.id/src/docs-${version}.tar.gz"
checksum="1ebbf8ccf8fa9f3f74c009335198100742886e8d8f9c6dcb8ba4dfd8e62b03dd"

do_build() {
	mdbook build
}

do_install() {
	vmkdir usr/share/doc/l7/docs
	vcopy ${wrksrc}/docs/html usr/share/doc/l7/docs
	vinstall ${FILESDIR}/docs.langitketujuh.desktop 0644 usr/share/applications docs.langitketujuh.desktop
}
