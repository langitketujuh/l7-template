# Template file for 'l7-konsole'
pkgname=l7-konsole
version=21.08.1
revision=1
build_style=meta
depends="konsole"
short_desc="LangitKetujuh patch for konsole package"
maintainer="Hervy Qurrotul Ainur Rozi <hervyqa@pm.me>"
license="GPL-2.0-only"
homepage="https://langitketujuh.id"

do_install() {
	vinstall ${FILESDIR}/konsolerc 0644 etc/skel/.config konsolerc
	vinstall ${FILESDIR}/breeze-dark.colorscheme 0644 etc/skel/.local/share/konsole
	vinstall ${FILESDIR}/langitketujuh.profile 0644 etc/skel/.local/share/konsole
}
