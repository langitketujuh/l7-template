do_install() {
  vinstall ${FILESDIR}/konsolerc 0644 etc/skel/.config konsolerc
  vinstall ${FILESDIR}/breeze-dark.colorscheme 0644 etc/skel/.local/share/konsole "Breeze Dark.colorscheme"
}
