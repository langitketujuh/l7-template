# Template file for 'l7-breeze-gtk'
pkgname=l7-breeze-gtk
version=0.1.1
revision=1
build_style=meta
depends="breeze-gtk"
short_desc="Additional configuration for breeze-gtk package"
maintainer="Hervy Qurrotul Ainur Rozi <hervyqa@pm.me>"
license="GPL-2.0-only"
homepage="https://langitketujuh.id"

do_install() {
	# file modified
	vinstall ${FILESDIR}/dot_gtkrc-2.0 0644 etc/skel .gtkrc-2.0
	vinstall ${FILESDIR}/colors.css 0644 etc/skel/.config/gtk-3.0 colors.css
	vinstall ${FILESDIR}/gtk.css 0644 etc/skel/.config/gtk-3.0 gtk.css
	vinstall ${FILESDIR}/settings.ini 0644 etc/skel/.config/gtk-3.0 settings.ini
}
