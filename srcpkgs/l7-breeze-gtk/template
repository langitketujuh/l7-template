do_install() {
	# file modified
	vinstall ${FILESDIR}/dot_gtkrc-2.0 0644 etc/skel .gtkrc-2.0
	vcopy ${FILESDIR}/gtk-3.0 etc/skel/.config
	vcopy ${FILESDIR}/gtk-4.0 etc/skel/.config
}
