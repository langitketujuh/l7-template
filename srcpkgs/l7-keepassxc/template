do_install() {
	vinstall ${FILESDIR}/keepassxc.ini 0644 etc/skel/.config/keepassxc keepassxc.ini
	vinstall ${FILESDIR}/org.keepassxc.KeePassXC.desktop 0644 etc/skel/.config/autostart
}
