# Template file for 'l7-pkg-wine'
pkgname=l7-pkg-wine
version=20211211
revision=1
build_style=meta
short_desc="Run Microsoft Windows applications - meta package"
maintainer="Hervy Qurrotul Ainur Rozi <hervyqa@pm.me>"
license="Public Domain"
homepage="https://langitketujuh.id"

case "$XBPS_TARGET_MACHINE" in
	x86_64-musl*)
		depends="wine wine-gecko wine-mono wine-tools winetricks protontricks libgcc libstdc++ libdrm libglvnd mesa-dri"
		;;
	x86_64*)
		depends="wine wine-gecko wine-mono wine-tools winetricks protontricks libgcc libstdc++ libdrm libglvnd mesa-dri wine-32bit libgcc-32bit libstdc++-32bit libdrm-32bit libglvnd-32bit mesa-dri-32bit void-repo-multilib"
		;;
	i686*)
		depends="wine wine-gecko wine-mono wine-tools winetricks protontricks libgcc libstdc++ libdrm libglvnd mesa-dri"
		;;
esac
