# Template file for 'l7-plasma-desktop'
pkgname=l7-plasma-desktop
version=5.23.3
revision=2
build_style=meta
depends="plasma-desktop l7-plasma-framework l7-papirus-icon-theme"
short_desc="LangitKetujuh patch for plasma-desktop package"
maintainer="Hervy Qurrotul Ainur Rozi <hervyqa@pm.me>"
license="GPL-2.0-only"
homepage="https://langitketujuh.id"

do_install() {
	vmkdir usr/share
	vcopy ${FILESDIR}/plasma usr/share
	vinstall ${FILESDIR}/kdeglobals 0644 etc/skel/.config kdeglobals
	vinstall ${FILESDIR}/touchpadrc 0644 etc/skel/.config touchpadrc
}
