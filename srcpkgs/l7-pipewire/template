# Template file for 'l7-pipewire'
pkgname=l7-pipewire
version=0.3.31
revision=1
build_style=meta
depends="pipewire"
short_desc="LangitKetujuh patch for pipewire package"
maintainer="Hervy Qurrotul Ainur Rozi <hervyqa@pm.me>"
license="GPL-2.0-only"
homepage="https://langitketujuh.id"

do_install() {
	vmkdir etc/alsa
	vcopy ${FILESDIR}/conf.d etc/alsa
	vinstall ${FILESDIR}/PipeWire.desktop 0644 etc/skel/.config/autostart PipeWire.desktop
	vsed -i ${FILESDIR}/pipewire.conf -e 's/#{ path = "\/usr\/bin\/pipewire"/{ path = "\/usr\/bin\/pipewire"/'
	vinstall ${FILESDIR}/pipewire.conf 0644 usr/share/pipewire pipewire.conf
}
